<?xml version="1.0"?>
<launch>
    <!-- Coordenadas com relação a origem do robô, o centro da sua base -->
    <arg name="topic_name" default="/HeadCoordinates"/>
    <arg name="position_x" default="0.2"/>
    <arg name="position_y" default="0.65"/>
    <arg name="position_z" default="0.85"/>
    <!-- z e y da ferramenta exemplo -->
    <!-- <arg name="position_y" default="-0.403"/>
    <arg name="position_z" default="1.325"/>  -->
    <arg name="euler_x" default="-2.34"/>
    <arg name="euler_y" default="0"/>
    <arg name="euler_z" default="0"/>
    <!--node pkg="rostopic" type="rostopic" name="head_coord_node" output="screen" 
    args="pub $(arg topic_name) geometry_msgs/PoseStamped 
    '{header: {stamp: now, frame_id: ''}, 
    pose: {position: {x: $(arg position_x), y: $(arg position_y), z: $(arg position_z)},
    orientation: {x: -1.57, y: -1.57, w: $(arg orientation_w)}}}'"/-->
    <node pkg="rostopic" type="rostopic" name="head_coord_node" output="screen" 
    args="pub $(arg topic_name) geometry_msgs/Twist 
    '{linear: {x: $(arg position_x), y: $(arg position_y), z: $(arg position_z)},
    angular: {x: $(arg euler_x), y: $(arg euler_y), z: $(arg euler_z)}}'"/>

</launch>

